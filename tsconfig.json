{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",

    "rootDir": "./src",
    "outDir": "./dist",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "sourceMap": true,
    "removeComments": true,
    "incremental": true,

    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
